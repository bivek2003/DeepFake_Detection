# Deepfake Detection Platform - Environment Configuration
# Copy this to .env and modify as needed

# =============================================================================
# Application Mode
# =============================================================================
DEMO_MODE=true                          # Enable demo mode (works without real weights)
DEBUG=false                             # Enable debug mode (detailed errors)
LOG_LEVEL=INFO                          # Logging level: DEBUG, INFO, WARNING, ERROR

# =============================================================================
# Authentication (optional - disabled by default for demo)
# =============================================================================
AUTH_ENABLED=false                      # Enable JWT authentication
JWT_SECRET_KEY=change-me-in-production  # Secret key for JWT tokens
JWT_ALGORITHM=HS256                     # JWT algorithm
JWT_EXPIRE_MINUTES=60                   # Token expiration in minutes

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=deepfake
POSTGRES_PASSWORD=deepfake_secret
POSTGRES_DB=deepfake_detection
DATABASE_URL=postgresql://deepfake:deepfake_secret@postgres:5432/deepfake_detection

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Celery
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# File Upload Settings
# =============================================================================
MAX_FILE_SIZE_MB=100                    # Maximum upload size in MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/webm
UPLOAD_DIR=/app/uploads                 # Upload directory (inside container)
ASSETS_DIR=/app/assets                  # Generated assets directory

# =============================================================================
# ML Settings
# =============================================================================
MODEL_WEIGHTS_PATH=/app/weights         # Path to model weights (optional)
DEVICE=auto                             # Device: auto, cpu, cuda
BATCH_SIZE=8                            # Batch size for video processing
MAX_FRAMES=100                          # Maximum frames to sample from video
FRAME_SAMPLE_RATE=1                     # Sample every Nth frame

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100                 # Requests per window
RATE_LIMIT_WINDOW_SECONDS=60            # Window size in seconds

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# =============================================================================
# Metrics
# =============================================================================
METRICS_ENABLED=true

# =============================================================================
# Storage (can be swapped to S3)
# =============================================================================
STORAGE_BACKEND=local                   # local or s3
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
